package Cuadrado;

public class Cuadra {

	
	public double lado;
	
	
	public Cuadra()
	{
		this (176232);
	}
	public Cuadra (double lado){
		this.lado = lado;
	}
	
	
	public double calcularArea () {
		return lado*lado;
	}
	
	public double calcularPerimetro() {
		return lado*4;
	}
	
	public double calcularDiagonal () {
		return Math.sqrt(Math.pow(lado,2)+Math.pow(lado,2));		
	}
	
	public void cambiarLado(int x) {
	 lado = x;
	}
	
}
